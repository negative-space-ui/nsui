{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean:pkgs": "turbo run clean",
    "clean:node-modules": "ts-node ./scripts/clean-node-modules.js",
    "create:pkg": "plop && pnpm install",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "plop": "ts-node ./scripts/warn-create-package.js",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@storybook/react": "^10.1.8",
    "@types/node": "^25.0.0",
    "clean-package": "^2.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "plop": "^4.0.4",
    "prettier": "^3.7.4",
    "react": "^19.2.1",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "turbo": "^2.6.3",
    "typescript-eslint": "^8.49.0"
  }
}
